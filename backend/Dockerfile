FROM python:3.12-slim
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /app
COPY pyproject.toml /app/
RUN pip install --no-cache-dir -U pip &&             pip install --no-cache-dir fastapi uvicorn[standard] pydantic SQLAlchemy aiomysql alembic python-dotenv passlib[bcrypt] pyjwt email-validator
COPY app /app/app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"]
